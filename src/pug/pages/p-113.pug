extends ../layouts/layout.pug

block content
	
	//========gamburger-menu=========
	include ../sections/_main-menu
	//========top-menu=========
	+header('Проверка объекта')
	.check-object.page-grid
		.page-grid__left
			include ../sections/_check-object-header
		.page-grid__right
			.right-modal.right-modal--active
				//======адрес для моб версии страницы =====
				.reestr-modal-address
					+address-card
				//======основной контент модального окна реестра =====
				.reestr-modal-content
					.reestr-modal__header
						img(src="../img/reestr.png", width="32" alt="alt")
						.title-20 Найдены данные <br> из Росреестра с 1998г
					.reestr-modal__body
						+reestr-list(
							{text1: 'История перехода прав',text2: '4 записи'},
							{text1: 'История обременений',text2: '5 записей'},
							{text1: 'Действующие права',text2: '3 записи'},
							{text1: 'Действующие обременения',text2: '1 запись'}
							)
					.reestr-modal__footer
						+button-flex('a', '#!', 'button--reverse button--light', 'Получить рекомендации',  'chevron', 'Chevron')
	//========== footer ==========
	include ../sections/_footer
	
block variables
	-var title = "Expresss | главная";
	- var bodyCl = "body-flex"
