extends ../layouts/layout.pug

block content
	
	//========gamburger-menu=========
	include ../sections/_main-menu
	//========top-menu=========
	+header('Контакты','inner','#!')(class="page-header--inner page-header--light")
	.contacts-header
		.page-header
			.container
				+breadcrumbs(
				{link: "#", text: 'Профиль'},
				{link: "#", text: 'Список заказов'},
				{link: "#", text: 'Проверка продавца'},
				)
				.page-header-title
					.title-2 Как с нами связаться
				.page-header-text
					.text-14.text-darkblue Задать нам вопрос можно позвонив на номер телефона:
					a(href="tel:+74953699731").title-20 +7 (495) 369-97-31
				
	.contacts-content
		.container
			.col-712
				.contacts-content__search
					.search-region-block
						.search-region-block__text.text-16 Ваш город: Калининград 
						.search-region-block__btn(frame-btn="search-region")
							img(src="../img/decor.png", width="18" alt="alt")
				.contacts-content__support
					.title-upper Позвоните в службу поддержки
					+list-types('marker-list marker-list--brown', 'Москва, 4-й Лесной переулок, 4, 5 этаж', 'Москва, 4-й Лесной переулок, 4, 5 этаж')
				.contacts-content__email
					.title-upper Написать нам
					.text-block
						.text-14.text-dark Отправьте сообщение с вопросом вы можете нам на Email: 
						a.text-blue(href="mailto:info@bezopasnosdelka.ru ") info@bezopasnosdelka.ru 

	.contacts-map
		.map-wrapper
			iframe(src='https://yandex.ru/map-widget/v1/?um=constructor%3Aa92044f04c8f994c85198b962eae72bb72482a55a5940902eca8e59a55ef917f&source=constructor' width='100%' height='100%' frameborder='0')

	//========== footer ==========
	include ../sections/_footer
	include ../blocks/search-region
	
	
	
block variables
	-var title = "Проверить объект | главная";
	- var bodyCl = "contacts"
