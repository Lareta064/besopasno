extends ../layouts/layout.pug

block content
	
	//========gamburger-menu=========
	include ../sections/_main-menu
	//========top-menu=========
	+header('Проверка объекта')
	.check-object.page-grid
		.page-grid__left
			include ../sections/_check-seller-header
			.check-object-content
				.container
					//====express данные =======
					.check-object-block
						.check-object__title
							.flex-wrapper
								.title-14 Экспресс данные
								.text-12 Всего записей
						.check-object__express-results
							+express-card('Розыск','svg-warning','svgWarning')
							+express-card('Розыск','svg-warning','svgWarning')
							+express-card('Розыск','svg-warning','svgWarning')
							+express-card('Розыск','svg-warning','svgWarning')
							+express-card('Розыск','svg-warning','svgWarning', 'status-yellow')
							+express-card('Розыск', 'svg-done','svgDone','status-green')
						
					//====окно с рекомендациями =======
					.check-object-block.check-object-block--mobile
						.page-grid__right
							.right-modal.right-modal--static.right-modal--active
								.right-modal-content
									.right-modal__header
										.title-20 В вашем случае #[br] Рекомендуем проверить
									.right-modal__body
										+list-types('marker-lock', 'Суды', 'Арбитраж',' Банкродство','Налоги','Дисквалификация','Организации','Терроризм','Суды')
									.right-modal__footer
										.button-group-2
											+double-button('Проверить', '300 &#8381;','button--blue')
											.button-group__bottom
												a(href="p-115.html").title-14.text-blue Нет данных о владельце?



					//====текстовая карточка =======
					.check-object-block
						+text-card('ВНИМАНИЕ!', 'Для общей уверенности следует проводить комплесную проверку и объекта и собственников')
					//====текстовая карточка =======
					.check-object-block
						.check-object__categories-title
							.text-16 Другие варианты комплексной проверки
						.categody-cards__wrapper.flex-wrapper
							+category-card('Базовая проверка', '7 900', '33 450','p-117.html')
							+category-card('Экспресс за 1 день!', '6 550', '33 450','p-117.html')(class="category-card--express")
							+category-card('Стандартная экспертиза', '10 990', '33 450','p-117.html')(class="category-card--active")
							+category-card('Стандартная экспертиза', '10 990', '33 450','p-117.html')
					
	
	//========== footer ==========
	include ../sections/_footer
	
block variables
	-var title = "Проверить объект | главная";
	- var bodyCl = "body-flex"
