extends ../layouts/layout.pug

block content
	//========gamburger-menu=========
	include ../sections/_main-menu
	
	//========top-menu=========
	+header('Проверка объекта','inner','p-118.html')(class="page-header--inner")
	
	//======= page-header ==========
	.object-search
		.page-header.header-100vh(style="background-image:url(./img/header-bg.jpg)")
			.container
				.page-header__content
					.col-712
						.page-header-title
							.title-2 Исключаем риски<br>при покупке недвижимости
						form(action="" method="method")
							.search-field
								.search-field__decor
									img(src="./img/decor.png", width="18" alt="alt")
								.form-item
									input(type="text" placeholder="Проверим объект?")
								button.search-field__btn
									svg.svg-close
										use(xlink:href="./img/svg-sprite.svg#svgClose")
			.object-search__results
				.container.container-p0
					.col-712.wrapper-drop
						.wrapper-drop__header
							.title-16 Найденные варианты
								span.icon-caret
									i
						.wrapper-drop__body
							+address-card
							+address-card
							+address-card
							+address-card

		include ../blocks/reestr-data
block variables
	-var title = "Express| Результаты поиска";
