									.badge.badge--color 873 м
						li
							+icon-group('cart', 'Cart', 'В корзину')
							pre.
								+icon-group('cart', 'Cart', 'В корзину')
						li
							+menuItem('Каталог услуг', '#', '','cat', 'Cat')
							pre.
								+menuItem('Каталог услуг', '#', '','cat', 'Cat')
						
						
						li
							+price-block('120 456', '220 456')
