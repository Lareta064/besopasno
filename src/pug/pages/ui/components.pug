												use(xlink:href="../img/svg-sprite.svg#svgBack2")
										p Выберите состав проверки
									
									
									.form-order-card__footer
										.product-cart-btn.button--disable
											.product-cart-btn__left
												.text-12 Выберите состав проверки
												svg.svg-plus
