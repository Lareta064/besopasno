extends ../layouts/layout.pug

block content
	
	//========gamburger-menu=========
	include ../sections/_main-menu
	//========top-menu=========
	+header('Контакты','inner','#!')(class="page-header--inner page-header--light")
	//======= шапка ======
	.seller-header
		.page-header.page-header--green
			.container
				+breadcrumbs(
				{link: "#", text: 'Профиль'},
				{link: "#", text: 'Список заказов'},
				{link: "#", text: 'Проверка продавца'},
				)(class="breadcrumb-block--white")
				.flex-wrapper.flex-wrapper--reverse-mobile
					.page-header__left
						.page-header-title
							.title-2 Иванов Иван Иванович
						.page-header-text
							.seller-info
								p Год рождения: #[span 12.11.1987	]
								p ИНН: #[span 644005983025]
								p Регионы проверки:  #[span  23	](Краснодарский край)
						
					.page-header__right
						img(src="../img/seller.jpg", width="120" alt="alt")
				
	//======== content =======
	.seller-content
		.container
			.seller-tabs
				.custom-tabs(custom-tabs)
					.custom-tabs__btns
						+seller-tabs-btns(
							{dataVal: 1, addClass: 'current', text: 'Отчёт' },
							{dataVal: 2,  text: 'Суды' },
							{dataVal: 3,  text: 'Арбитраж' },
							{dataVal: 4,  text: 'Банкротства' },
							{dataVal: 5,  text: 'Коррупция' },
							{dataVal: 6,  text: 'Организации' },
							{dataVal: 7,  text: 'ФССП' },
							{dataVal: 8,  text: 'Налоги' },
							{dataVal: 9,  text: 'Залоги' },
							{dataVal: 10,  text: 'Дисквалификация' },
							{dataVal: 11,  text: 'Терроризм' },
							{dataVal: 12,  text: 'Лицом интересовались' },
							{dataVal: 13,  text: 'Проверка паспорта' },
							{dataVal: 14,  text: 'Финансовый Скоринг FICO' },
							{dataVal: 15,  text: 'Финансовый Скоринг через ОКБ' },
							)
						
						.custom-tabs__row.custom-tabs__row--hide-1199
							a(href="p-131.html").expert-review
								.expert-review__body
									.expert-review__img
										.success-group
											.icon-doc
											.check-success
									.expert-review__text
										.title-14 Экспертная проверка
										.text-12 Будет произведен анализ открытых и закрытых данных и вынесено заключение
								.expert-review__btn
									+double-button('Заказать проверку', '2 999 ₽')(class="fz-16")
						
					//======tabs content ======
					.custom-tabs__content
						.custom-tabs__content-block.ct-content--active(ct-content="1")
							.custom-tabs__content-row
								.title-20 Сводный отчёт
							//======= карточка экспертная проверка =========
							.custom-tabs__content-row.wrapper-visible-1199
								.expert-review
									.expert-review__body
										.expert-review__img
											.success-group.success-group--blue
												.icon-doc
												.check-success
										.expert-review__text
											.title-14 Экспертная проверка
											.text-12 Вынесено экспертное заключение на основе анализа закрытых и открытых данных
									.expert-review__btn
										a(href="#!" download).group-download
											svg.svg-download
												use(xlink:href="../img/svg-sprite.svg#svgDownload")
											span Загрузить PDF
										
										.link-group
											a(href="#!")
												svg.svg-email
													use(xlink:href="../img/svg-sprite.svg#svgEmail")
											a(href="#!")
												svg.svg-share
													use(xlink:href="../img/svg-sprite.svg#svgShare")
							
							.custom-tabs__content-row
								.check-object__title
									.flex-wrapper
										.title-upper Экспресс данные
										.text-12 Всего записей
								.check-object__express-results
									+express-card('Суды','svg-warning','svgWarning', '','Есть открытые судебные разбирательства')
									+express-card('Налоги','svg-warning','svgWarning','', 'Обнаружены налоговые задолжности')
									+express-card('Долги','svg-warning','svgWarning','', 'Имеются задолжности перед третьими лицами')
									+express-card('Организации','svg-warning','svgWarning','', 'Найдены зарегистрированные организации с пометкой “красный”')
									+express-card('Розыск','svg-warning','svgWarning', 'status-yellow','Требуется уточнить обстоятельства розыска')
									+express-card('ГБДД','svg-warning','svgWarning', 'status-yellow','Обнаружены наружения ПДД')
									+express-card('Залоги','svg-warning','svgWarning', 'status-yellow','У владельца есть недвижимость в залоге')
									+express-card('Паспорт','svg-warning','svgWarning', 'status-yellow','Паспорт закончил свой срок действия, требуется обновление')
									+express-card('Арбитраж', 'svg-done','svgDone','status-green','Арбитражных дел не обнаружено')
									+express-card('Дисквалификация', 'svg-done','svgDone','status-green','Владелец может подписывать документы без ограничений')
									+express-card('Банкродство', 'svg-done','svgDone','status-green','В ближайшие 5 лет банкродство ФИЗ лица не проводилось')
							
							
							.custom-tabs__content-row
								.title-upper Объекты собственника
								.report-cards
									+address-card
									+address-card
								.border-link Показать все объекты
							
							
						.custom-tabs__content-block(ct-content="2")
							h1 jjjllll
						.custom-tabs__content-block(ct-content="3")
							h1 jjj;;;;
	//========== footer ==========
	include ../sections/_footer
	
	
	
	
block variables
	-var title = "Продавец";
	- var bodyCl = "seller"
