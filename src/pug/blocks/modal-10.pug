.modal-frame(frame-modal="success-pay")
	+mobile-header('Заказ оформлен')
	.modal-close.btn-close(frame-close)
		svg.svg-close
			use(xlink:href="../img/svg-sprite.svg#svgClose")
	.modal-frame-content
		.container-slim
			.modal-frame__img
				.success-check
					svg.svg-success
						use(xlink:href="../img/svg-sprite.svg#svgSuccess")
			.modal-frame__text
				.title-24 Заказ успешно оформлен
				.text-16 В ближайшее время с вами свяжутся наши сециалисты

	.modal-frame__footer
		.container-slim
			+button('a', 'p-115.html', 'Заказать ещё', 'button--blue')
			+button('a', '#!', 'Список заказов', 'button--white')